                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/known" />

                <CheckBox
                    android:id="@+id/chkSECUnknown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
